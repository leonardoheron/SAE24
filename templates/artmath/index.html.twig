                <input type="range" class="form-range" min="0" max="6" step="1" id="dimension_nbc" name="dimension_nbc">
                <input type="range" class="form-range" min="0" max="6" step="1" id="dimension_nbl" name="dimension_nbl">
        </div>
        <div>
            <button type="submit" class="btn btn-primary" name="calculer_nees" value="1">Calculer</button>
            <button type="submit" class="btn btn-danger" name="imprimer_nees" value="1">Imprimer</button>
        </div>
    </form>

    <h1> Résultat : </h1>
    <img src="{{fichier_nees}}" width="100%">
</div>
{% endblock %}
